<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_student_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Program Name-->
            <TextView
                android:id="@+id/txtProgramName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="خصائص النمو-المرحلة الابتدائية / ٥٤٥٧"
                android:textColor="#6A6B74"
                android:textSize="15.95sp" />

            <!--Program Time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtProgramTimeLabel"
                    android:layout_width="112.23dp"
                    android:layout_height="wrap_content"
                    android:text="الزمن"
                    android:textColor="#4EB4D0"
                    android:textSize="15.95sp" />


                <TextView
                    android:id="@+id/txtProgramTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#A4A6B5"
                    android:textSize="15.95sp" />

            </LinearLayout>

            <!--Program Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_grey_bg"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtProgramDateLabel"
                    android:layout_width="112.23dp"
                    android:layout_height="wrap_content"
                    android:text="تاريخه"
                    android:textColor="#4EB4D0"
                    android:textSize="15.95sp" />


                <TextView
                    android:id="@+id/txtProgramDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#A4A6B5"
                    android:textSize="15.95sp" />

            </LinearLayout>

            <!--Reg Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtRegDateLabel"
                    android:layout_width="112.23dp"
                    android:layout_height="wrap_content"
                    android:text="تاريخ التسجيل"
                    android:textColor="#4EB4D0"
                    android:textSize="15.95sp" />

                <TextView
                    android:id="@+id/txtRegDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#A4A6B5"
                    android:textSize="15.95sp" />

            </LinearLayout>

            <!--Status-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_grey_bg"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtProgramStatusLabel"
                    android:layout_width="112.23dp"
                    android:layout_height="wrap_content"
                    android:text="الحالة"
                    android:textColor="#4EB4D0"
                    android:textSize="15.95sp" />

                <TextView
                    android:id="@+id/txtProgramStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#A4A6B5"
                    android:textSize="15.95sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>