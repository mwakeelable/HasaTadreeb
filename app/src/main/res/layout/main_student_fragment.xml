<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/decor" />

        <RelativeLayout
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top">

            <LinearLayout
                android:id="@+id/preLoginLogo"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/trainee_main"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/btnRegister"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_below="@id/preLoginLogo"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/trainee_register"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/btnRecent"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignBottom="@+id/btnRegister"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="85dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/trainee_recent"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/btnFinished"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/trainee_finish"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignTop="@+id/btnRecent"
                android:layout_toEndOf="@+id/btnRecent"
                android:layout_marginStart="7dp" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>