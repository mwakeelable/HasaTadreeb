<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/teacher_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/teacher_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_item"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <!--teacher name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTeacherNameLabel"
                    android:layout_width="113.46dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="اسم المعلم"
                    android:textColor="#4EB4D0"
                    android:textSize="15.95sp"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/txtTeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#A4A6B5"
                    android:textSize="15.95sp"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

            <!--Teacher Specialize-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_grey_bg">

                <TextView
                    android:id="@+id/txtTeacherSpecializeLabel"
                    android:layout_width="113.46dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="التخصص"
                    android:textColor="#4EB4D0"
                    android:textSize="15.95sp"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/txtTeacherSpecalize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#A4A6B5"
                    android:textSize="15.95sp"
                    android:layout_marginBottom="3dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
