<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AbsenceActivity"
    tools:showIn="@layout/absence_activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/data_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/layout_bg">

            <LinearLayout
                android:id="@+id/nameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اسم البرنامج: "
                    android:textColor="#B9B9B9"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtProgramName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6A6A6A"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!--name divider-->
            <View
                android:id="@+id/nameDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/nameContainer"
                android:background="#B9B9B9"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <!--status-->
            <LinearLayout
                android:id="@+id/programStatusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameDivider"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اليوم"
                        android:textColor="#B9B9B9"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAbsenceDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6A6A6A"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#B9B9B9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الفترة"
                        android:textColor="#B9B9B9"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAbsencePeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6A6A6A"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <!--status divider-->
            <View
                android:id="@+id/statusDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/programStatusContainer"
                android:background="#B9B9B9"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <!--submit button-->
            <android.support.v7.widget.CardView
                android:id="@+id/btnSubmitAbsence"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/submit_button_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اعتماد التحديد"
                        android:textColor="@color/White"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--main-->
            <com.linked_sys.tadreeb_ihssa.components.ScrollViewExt
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btnSubmitAbsence"
                android:layout_below="@id/statusDivider"
                android:layout_margin="8dp">

                <LinearLayout
                    android:id="@+id/students_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </com.linked_sys.tadreeb_ihssa.components.ScrollViewExt>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/no_data_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/oops_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/txt_no_data" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
