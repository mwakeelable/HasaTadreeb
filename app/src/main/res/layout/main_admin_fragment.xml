                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/preLoginLogo"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_bg2"
                    android:gravity="center"
                    android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btnTeachersData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/student_white_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بيانات المعلمين" />


                </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAdminLoginContainer"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@id/preLoginLogo"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btnSupportTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/program_register_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تذكرة دعم" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="فني" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnStudentLoginContainer"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignBottom="@+id/btnAdminLoginContainer"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="85dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btnApprovedPrograms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/programs_current_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="طلبات معتمدة" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTeacherLoginContainer"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignBottom="@+id/btnAdminLoginContainer"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="85dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btnNotApprovedPrograms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/programs_done_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="طلبات غير معتمدة" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <!--Search-->
            <android.support.v7.widget.CardView
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عرض برامج معلم / موظف"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
